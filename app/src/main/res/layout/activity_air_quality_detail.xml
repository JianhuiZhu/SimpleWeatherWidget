<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".air_quality_detail.AirQualityActivity"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">
            <android.support.v7.widget.CardView
                android:id="@+id/aqi_card_view"
                android:layout_width="match_parent"
                card_view:cardBackgroundColor="@color/md_blue_500"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                android:layout_height="@dimen/today_card_height">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/location_name_text_view"
                        style="@style/TextViewHeadlineTheme"
                        tools:text = "Beijing"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/md_white_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/location_time_text_view"
                        android:layout_below="@+id/location_name_text_view"
                        android:layout_centerHorizontal="true"
                        style="@style/TextViewDetailTheme"
                        tools:text = "15 / 6 / 2017"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/aqi_number_text_view"
                        style="@style/TextViewHeadlineTheme"
                        android:layout_below="@+id/location_time_text_view"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/md_white_1000"
                        tools:text = "81"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/aqi_description_brief_text_view"
                        style="@style/TextViewSubTitleTheme"
                        android:textColor="@color/md_white_1000"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/aqi_number_text_view"
                        tools:text = "Unhealthy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/ads_adview"
        android:id="@+id/pollutants_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.design.widget.CoordinatorLayout>