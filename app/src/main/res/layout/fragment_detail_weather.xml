<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/AppTheme"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/today_card_height"
        card_view:cardBackgroundColor="@color/md_blue_500"
        card_view:cardElevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/temperature_text_view"
        android:textColor="?android:textColorPrimary"
        tools:text = "32 C"
        style="@style/TextViewHeadlineTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/weather_icon_image_view"
        android:src="@drawable/ic_snow"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/weather_icon_xlarge"
        android:layout_height="@dimen/weather_icon_xlarge" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/wind_speed_label"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wind_speed_value_text_view"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</ScrollView>