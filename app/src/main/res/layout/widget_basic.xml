<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="@dimen/widget_width"
    android:layout_height="@dimen/widget_height"
    android:background="@color/half_transparent_white">


    <TextView
        android:id="@+id/weather_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperature_area"
        android:layout_toRightOf="@+id/weather_icon_image_view"
        android:paddingLeft="@dimen/material_default_spacing"
        android:textSize="@dimen/material_english_text_caption"
        tools:text="snow ongoing" />

    <ImageView
        android:id="@+id/weather_icon_image_view"
        android:layout_width="@dimen/weather_icon_medium"
        android:layout_height="@dimen/weather_icon_medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/temperature_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/weather_icon_image_view"
        android:layout_toRightOf="@+id/weather_icon_image_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperature_text_view"
            style="@style/WidgetTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="33 C" />

        <ImageView
            android:id="@+id/air_pollution_image_view"
            android:layout_width="@dimen/weather_icon_medium"
            android:layout_height="@dimen/weather_icon_medium"
            android:src="@drawable/ic_air_pollution" />

        <TextView
            android:id="@+id/air_condition_text_view"
            style="@style/WidgetTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="Good" />
    </LinearLayout>
</RelativeLayout>