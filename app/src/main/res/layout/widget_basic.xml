<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/widget"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weather_icon_image_view"
            android:layout_width="@dimen/weather_icon_large"
            android:layout_height="@dimen/weather_icon_large" />

        <TextView
            android:layout_marginLeft="@dimen/material_default_spacing"
            android:id="@+id/weather_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_english_text_title"
            tools:text="snow" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="@dimen/material_default_spacing"
                android:id="@+id/temperature_text_view"
                android:textSize="@dimen/material_english_text_display_1"
                tools:text = "33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/material_default_spacing"
                    android:src="@drawable/ic_water_drop"
                    android:layout_width="@dimen/weather_icon_xsmall"
                    android:layout_height="@dimen/weather_icon_xsmall" />
            <TextView
                android:padding="@dimen/material_default_spacing"
                tools:text = "68%"
                android:id="@+id/humidity_text_view"
                android:textSize="@dimen/material_english_text_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>