<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/md_blue_500</item>-->
        <!--<item name="colorPrimaryDark">@color/md_blue_700</item>-->
        <!--<item name="colorAccent">@color/md_pink_A200</item>-->


    <style name="TextViewDetailTheme" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tiny_english_text</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="TextViewWidgetTemperatureDetail" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/material_english_text_caption</item>
        <item name="android:textColor">@color/md_grey_700</item>
    </style>
    <style name="TextViewHeadlineTheme" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/material_default_spacing</item>
        <item name="android:layout_marginBottom">@dimen/material_default_spacing</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/material_english_text_headline</item>
    </style>
    <style name="TextViewTitleTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/material_english_text_title</item>
    </style>
    <style name="TextViewSubTitleTheme" parent="TextViewDetailTheme">
        <item name="android:textSize">@dimen/material_english_text_caption</item>
    </style>
    <style name="ViewTheme">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/material_default_spacing</item>
        <item name="android:layout_marginBottom">@dimen/material_default_spacing</item> 
    </style>

    <style name="TextViewWidgetTemperature" parent="android:Widget.TextView">
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textSize">@dimen/material_english_text_headline</item>

    </style>

    <style name="TextViewToolbarTitleTheme">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/material_english_text_headline</item>
    </style>

    <style name="WidgetTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewToolbarSubTitleTheme">
        <item name="android:textSize">@dimen/material_english_text_caption</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>
</resources>
